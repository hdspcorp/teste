          </div>
        </section>

        {/* PRICING / CTA */}
        <section className="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
          <PricingCard tier="Starter" price="Sob consulta" features={["Implementação inicial", "Chatbot básico", "Suporte 30 dias"]} />
          <PricingCard tier="Business" price="Sob consulta" features={["Fluxos complexos", "Integração Chatbase", "Monitoramento"]} recommended />
          <PricingCard tier="Enterprise" price="Sob consulta" features={["SLA dedicado", "Treinamento contínuo", "Acompanhamento estratégico"]} />
        </section>

        {/* CONTATO */}
