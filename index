/* ---------- UI Subcomponents ---------- */

function Card({ title, desc, icon }) {
  return (
    <div className="rounded-2xl p-6 bg-white shadow-md border border-gray-100">
      <div className="flex items-start gap-4">
        <div className="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center">{icon}</div>
        <div>
          <div className="text-sm font-semibold">{title}</div>
          <div className="mt-2 text-sm text-gray-600">{desc}</div>
        </div>
      </div>
    </div>
  );
}

function CaseCard({ title, result, desc }) {
  return (
    <div className="rounded-2xl p-6 bg-white shadow-md border border-gray-100">
      <div className="text-xs text-gray-500">{title}</div>
      <div className="mt-3 text-xl font-bold">{result}</div>
      <div className="mt-2 text-sm text-gray-600">{desc}</div>
    </div>
  );
}

function PricingCard({ tier, price, features = [], recommended }) {
  return (
    <div className={`rounded-2xl p-6 ${recommended ? 'border-2 border-indigo-600' : 'border border-gray-100'} bg-white shadow-md`}>
      <div className="flex items-center justify-between">
        <div>
          <div className="text-sm text-gray-500">{tier}</div>
          <div className="mt-2 text-2xl font-bold">{price}</div>
        </div>
        {recommended && <div className="text-xs bg-indigo-600 text-white rounded-full px-3 py-1">Recomendado</div>}
      </div>

      <ul className="mt-4 space-y-2 text-sm text-gray-600">
        {features.map((f, i) => (
          <li key={i}>• {f}</li>
        ))}
      </ul>

      <div className="mt-6">
        <a href="#contato" className="inline-flex items-center gap-3 rounded-lg bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-500 px-4 py-2 text-white font-semibold shadow">Solicitar Proposta</a>
      </div>
    </div>
  );
}

/* ---------- Icons (SVG) ---------- */
function IconBot() {
  return (
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2v2" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <rect x="6" y="6" width="12" height="10" rx="2" stroke="#4F46E5" strokeWidth="1.6"/>
      <path d="M8 12h.01M16 12h.01" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
    </svg>
  );
}

function IconIntegrate() {
  return (
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M4 12h6" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <path d="M20 12h-6" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <path d="M8 8l-4 4 4 4" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <path d="M16 8l4 4-4 4" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
    </svg>
  );
}

function IconAnalytics() {
  return (
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M3 3v18h18" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <path d="M7 13v6" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <path d="M12 7v12" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
      <path d="M17 10v9" stroke="#4F46E5" strokeWidth="1.6" strokeLinecap="round" strokeLinejoin="round"/>
    </svg>
  );
}
