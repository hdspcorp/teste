                <button type="submit" className="rounded-lg bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-500 px-5 py-3 text-white font-semibold shadow">Enviar mensagem</button>
                <a href="https://wa.me/55XXXXXXXXXXX" className="text-sm font-medium">Ou fale pelo WhatsApp</a>
              </div>
            </form>
          </div>
        </section>

        <footer className="mt-12 border-t pt-8 pb-12 text-sm text-gray-500">
          <div className="flex flex-col md:flex-row items-center justify-between gap-4">
